{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "quotemark": [
      "double"
    ],
    "indent": [true, "tabs", 4],
    "no-console": [
      false
    ],
    "no-bitwise": false,
    "object-literal-sort-keys": true,
    "arrow-parens": true,
    "only-arrow-functions": [
      true
    ],
    "no-consecutive-blank-lines": [
      true
    ],
    "max-line-length": [
      120
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive"
      }
    ],
    "member-ordering": [
      true,
      {
        "order": "fields-first",
        "alphabetize": true
      }
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ]
  }
}
