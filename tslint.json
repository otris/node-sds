{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "src/cryptmd5.ts",
      "src/main.ts",
      "src/network.ts",
      "src/sds.ts",
      "src/testPDObject.ts",
      "test/cryptmd5.test.ts",
      "test/network.test.ts",
      "test/sds.test.ts"
    ]
  },
  "rules": {
    "quotemark": [
      true, 
      "double"
    ],
    "indent": [true, "tabs", 4],
    "no-console": [
      false
    ],
    "no-bitwise": false,
    "object-literal-sort-keys": true,
    "arrow-parens": true,
    "only-arrow-functions": [
      false
    ],
    "no-consecutive-blank-lines": [
      true
    ],
    "max-line-length": [
      true,
      180
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive"
      }
    ],
    "member-ordering": [
      true,
      {
        "order": "fields-first",
        "alphabetize": true
      }
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "no-empty-interface": false
  }
}
